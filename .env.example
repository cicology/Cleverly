# Shared
SUPABASE_URL=https://your-supabase-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# AI
GEMINI_API_KEY=your-google-gemini-api-key
GEMINI_FILE_SEARCH_ENABLED=true
GEMINI_FILE_SEARCH_MODEL=gemini-2.0-flash
GEMINI_FILE_SEARCH_STORE_PREFIX=cleverly-course-
GEMINI_FILE_SEARCH_POLL_MS=5000
GEMINI_FILE_SEARCH_MAX_WAIT_MS=120000
GEMINI_GRADING_MODEL=gemini-2.0-flash
OCR_MODEL=gemini-1.5-pro

# Backend
NODE_ENV=development
PORT=4000
REDIS_URL=redis://localhost:6379
STORAGE_BUCKET=courses
CLIENT_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
MAX_UPLOAD_MB=10
MAX_UPLOAD_FILES=20
ALLOW_DEV_AUTH_BYPASS=false
ALLOW_USER_GEMINI_KEYS=false
DASHBOARD_RECENT_LIMIT=5
DASHBOARD_MINUTES_SAVED_PER_SUBMISSION=10
DEFAULT_NOTIFY_EMAIL=true
DEFAULT_NOTIFY_GRADING_COMPLETE=true
DEFAULT_THEME=system

# LTI 1.3 (optional)
LTI_ENABLED=false
LTI_PORT=4001
LTI_KEY=your-lti-signing-key
LTI_DB_URL=postgres://user:pass@host:5432/lti
LTI_DB_SSL=true
LTI_COOKIE_SAMESITE=None
LTI_TOOL_URL=https://api.example.com
LTI_AUTO_CREATE_BY_EMAIL=false
LTI_PLATFORM_URL=
LTI_PLATFORM_NAME=
LTI_CLIENT_ID=
LTI_AUTH_ENDPOINT=
LTI_TOKEN_ENDPOINT=
LTI_KEYSET_URL=
LTI_AUTH_SERVER=
LTI_DYN_REG_URL=
LTI_TOOL_NAME=Cleverly AI Grader

# Admin
ADMIN_API_KEY=your-admin-api-key

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
NEXT_PUBLIC_SUPABASE_DEMO_TOKEN=
NEXT_PUBLIC_ALLOW_DEMO_TOKEN=false
